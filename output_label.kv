<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            id: outputLabel
            text: "I am your virtual voice assistant  Tasha 2.0"
            font_size: 32

        Button:
            background_normal :"mic_normal.png"
            background_down :"mic_down.png"
            size_hint: 0.19, 0.3
            pos_hint: {"x": 0.4, "y": 0.3}
            on_press: outputLabel.text= "Listening..."
            on_release: root.press()

